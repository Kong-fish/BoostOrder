<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:BO_Mobile.ViewModels"
             xmlns:models="clr-namespace:BO_Mobile.Models"
             xmlns:ffimageloading="clr-namespace:FFImageLoading.Maui;assembly=FFImageLoading.Maui"
             x:Class="BO_Mobile.Views.CartPage"
             x:DataType="viewModels:CartViewModel"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto, *, Auto">
        <!-- 1. Custom Header -->
        <Grid Grid.Row="0" BackgroundColor="#007AFF" Padding="10,15">
            <Label Text="Cart" TextColor="White" FontSize="18" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center" />
            <Button Text="&lt;" TextColor="White" FontSize="15" FontAttributes="Bold" BackgroundColor="Transparent" VerticalOptions="Center" HorizontalOptions="Start" Command="{Binding GoBackCommand}"/>
            <Image Source="threedots.png" VerticalOptions="Center" HeightRequest="24" WidthRequest="24" HorizontalOptions="End">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding ClearCartCommand}" />
                </Image.GestureRecognizers>
            </Image>
        </Grid>

        <!-- 2. Main list of cart items -->
        <CollectionView ItemsSource="{Binding Items}" Grid.Row="1" Margin="10,0">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:CartItem">
                    <SwipeView>
                        <SwipeView.RightItems>
                            <SwipeItems>
                                <SwipeItem Text="Delete" BackgroundColor="Red"
                                           Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:CartViewModel}}, Path=RemoveItemCommand}"
                                           CommandParameter="{Binding .}" />
                            </SwipeItems>
                        </SwipeView.RightItems>

                        <Grid BackgroundColor="White">
                            <VerticalStackLayout>
                                <Grid Padding="0,15" ColumnDefinitions="*, Auto" RowDefinitions="Auto, Auto" ColumnSpacing="10" RowSpacing="15">
                                    <!-- Product Info -->
                                    <VerticalStackLayout Grid.Row="0" Grid.Column="0" Spacing="2">
                                        <HorizontalStackLayout Spacing="5">
                                            <Label Text="{Binding Sku}" FontSize="12" TextColor="Gray"/>
                                            <Label Text="100 in stock" TextColor="#00C853" FontSize="12" />
                                        </HorizontalStackLayout>
                                        <Label Text="{Binding Name}" FontAttributes="Bold" FontSize="16"/>
                                        <Label Text="{Binding Price, StringFormat='RM {0:F2}'}" FontSize="14" />
                                    </VerticalStackLayout>
                                    
                                    <!-- Image -->
                                    <ffimageloading:CachedImage 
                                        Grid.Row="0" Grid.Column="1"
                                        Source="{Binding ImageUrl}" 
                                        ErrorPlaceholder="no_image.png" 
                                        Aspect="AspectFill" 
                                        HeightRequest="50" 
                                        WidthRequest="50" />
                                    
                                    <!-- THE FIX (Part 1): Aligned to the right -->
                                    <HorizontalStackLayout Grid.Row="1" Grid.ColumnSpan="2" Spacing="10" VerticalOptions="Center" HorizontalOptions="End">
                                        <BoxView Color="#007AFF" WidthRequest="2" HeightRequest="20" VerticalOptions="Center"/>
                                        <Label Text="Order" TextColor="Gray" FontSize="12" VerticalOptions="Center"/>
                                        <HorizontalStackLayout Spacing="2" VerticalOptions="Center">
                                            <Label Text="{Binding Quantity}" FontAttributes="Bold" TextColor="#007AFF" />
                                            <Label Text="{Binding Uom}" FontAttributes="Bold" TextColor="#007AFF" />
                                            <Label Text=">" FontAttributes="Bold" TextColor="#007AFF" />
                                        </HorizontalStackLayout>
                                        
                                        <BoxView Color="Orange" WidthRequest="2" HeightRequest="20" VerticalOptions="Center" Margin="10,0,0,0"/>
                                        <Label Text="Total" TextColor="Gray" FontSize="12" VerticalOptions="Center"/>
                                        <Label Text="{Binding Total, StringFormat='RM {0:F2}'}" FontAttributes="Bold" VerticalOptions="Center"/>
                                    </HorizontalStackLayout>
                                </Grid>
                            </VerticalStackLayout>
                        </Grid>
                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>

            <!-- THE FIX (Part 2): Total bar moved to CollectionView.Footer -->
            <CollectionView.Footer>
                <Grid ColumnDefinitions="*, Auto" Padding="10,15">
                    <Label Grid.Column="0" Text="Total" FontAttributes="Bold" VerticalOptions="Center"/>
                    <Label Grid.Column="1" Text="{Binding CartTotal, StringFormat='RM {0:F2}'}" FontAttributes="Bold" VerticalOptions="Center"/>
                </Grid>
            </CollectionView.Footer>
        </CollectionView>

        <!-- Footer with Checkout -->
        <Border Grid.Row="2" Stroke="LightGray" StrokeThickness="1" Padding="15">
             <Grid ColumnDefinitions="*, Auto">
                <StackLayout Grid.Column="0" VerticalOptions="Center">
                    <Label Text="{Binding Items.Count, StringFormat='Total ({0})'}"/>
                    <Label Text="{Binding CartTotal, StringFormat='RM {0:F2}'}" FontSize="Large" FontAttributes="Bold" />
                </StackLayout>
                <Button Grid.Column="1" Text="Checkout" BackgroundColor="#007AFF" TextColor="White" CornerRadius="20" Padding="30,10" VerticalOptions="Center"/>
            </Grid>
        </Border>
    </Grid>
</ContentPage>

