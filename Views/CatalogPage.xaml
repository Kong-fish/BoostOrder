<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:BO_Mobile.ViewModels"
             xmlns:models="clr-namespace:BO_Mobile.Models"
             xmlns:ffimageloading="clr-namespace:FFImageLoading.Maui;assembly=FFImageLoading.Maui"
             x:Class="BO_Mobile.Views.CatalogPage"
             x:DataType="viewModels:CatalogViewModel"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto, Auto, *">
        <!-- 1. Custom Header -->
        <Grid Grid.Row="0" BackgroundColor="#007AFF" Padding="10,15" ColumnDefinitions="Auto, *, Auto">
            <ImageButton Source="back_arrow.png" VerticalOptions="Center" HeightRequest="24" WidthRequest="24" />
            <Label Grid.Column="1" Text="Categories Name" TextColor="White" FontSize="18" FontAttributes="Bold" VerticalOptions="Center" HorizontalOptions="Center" />
            <HorizontalStackLayout Grid.Column="2" Spacing="10" VerticalOptions="Center">
                 <Label Text="Company Name" TextColor="White" VerticalOptions="Center" />
                <Border StrokeShape="RoundRectangle 50" BackgroundColor="White" HeightRequest="34" WidthRequest="34" VerticalOptions="Center">
                    <Label Text="CN" TextColor="#007AFF" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center" />
                </Border>
                <ImageButton Source="threedots.png" VerticalOptions="Center" HeightRequest="24" WidthRequest="24"/>
            </HorizontalStackLayout>
        </Grid>
        
        <!-- 2. Search Bar Area with Cart Icon & Badge -->
        <Grid Grid.Row="1" Margin="10,5">
            <SearchBar Placeholder="Search..." Text="{Binding SearchText}" />
            <Grid HorizontalOptions="End" VerticalOptions="Center" Margin="0,0,10,0">
                 <ImageButton Source="cart_icon.png" HeightRequest="30" WidthRequest="30" Command="{Binding GoToCartCommand}"/>
                 <Border StrokeShape="RoundRectangle 20" BackgroundColor="Red"
                         IsVisible="{Binding CartItemCount, Converter={StaticResource IntToBoolConverter}}"
                         HorizontalOptions="End" VerticalOptions="Start"
                         TranslationX="5" TranslationY="-5">
                      <Label Text="{Binding CartItemCount}" TextColor="White" FontSize="10" Padding="5,2" />
                 </Border>
            </Grid>
        </Grid>

        <!-- 3. Main Content Area -->
        <Grid Grid.Row="2">
            <CollectionView ItemsSource="{Binding Products}" IsVisible="{Binding IsNotBusy}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Product">
                        <Border Stroke="LightGray" StrokeThickness="1" Margin="10" Padding="10">
                             <Grid ColumnDefinitions="100, *" RowDefinitions="Auto, Auto" RowSpacing="10">
                                <ffimageloading:CachedImage Grid.Column="0" Grid.RowSpan="2" 
                                                            Source="{Binding ImageUrl}" 
                                                            ErrorPlaceholder="no_image.png" 
                                                            Aspect="AspectFill" 
                                                            HeightRequest="100" 
                                                            WidthRequest="100" 
                                                            CacheDuration="30" />
                                
                                <VerticalStackLayout Grid.Column="1" Grid.Row="0" VerticalOptions="Start">
                                    <Label Text="{Binding Sku}" FontSize="12" TextColor="Gray"/>
                                    <Label Text="{Binding Name}" FontAttributes="Bold" FontSize="16"/>
                                    <Label Text="{Binding DisplayPrice, StringFormat='RM {0}'}" FontAttributes="Bold" FontSize="14" />
                                </VerticalStackLayout>
                                
                                <Grid Grid.Column="1" Grid.Row="1" ColumnDefinitions="*, Auto" VerticalOptions="End">
                                    <Picker Grid.Column="0"
                                            ItemsSource="{Binding Variations}"
                                            SelectedItem="{Binding SelectedVariation}"
                                            ItemDisplayBinding="{Binding Uom}"
                                            />
                                    
                                    <Button Grid.Column="1" 
                                            Text="+" 
                                            FontSize="Large"
                                            WidthRequest="50"
                                            HeightRequest="50"
                                            CornerRadius="25"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:CatalogViewModel}}, Path=AddToCartCommand}"
                                            CommandParameter="{Binding .}"/>
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" HorizontalOptions="Center" VerticalOptions="Center" />
        </Grid>
    </Grid>
</ContentPage>

