<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:BO_Mobile.ViewModels"
             xmlns:models="clr-namespace:BO_Mobile.Models"
             xmlns:ffimageloading="clr-namespace:FFImageLoading.Maui;assembly=FFImageLoading.Maui"
             x:Class="BO_Mobile.Views.CatalogPage"
             x:DataType="viewModels:CatalogViewModel"
             Shell.NavBarIsVisible="False">

    <!-- THE FIX: Main grid now has 3 rows again -->
    <Grid RowDefinitions="Auto, Auto, *">
        <!-- 1. Custom Header -->
        <Grid Grid.Row="0" BackgroundColor="#007AFF" Padding="10,15" ColumnDefinitions="Auto, *, Auto">
            <HorizontalStackLayout Grid.Column="0" Spacing="10" VerticalOptions="Center">
                <Button Text="&lt;" TextColor="White" FontSize="15" FontAttributes="Bold" BackgroundColor="Transparent" VerticalOptions="Center" TranslationX="-5" />
                <Label Text="Categories Name" TextColor="White" FontSize="14" VerticalOptions="Center" TranslationX="-25" />
            </HorizontalStackLayout>
            
            <HorizontalStackLayout Grid.Column="2" Spacing="10" VerticalOptions="Center">
                 <Label Text="Company Name" TextColor="White"  FontSize="13" VerticalOptions="Center" />
                <Border StrokeShape="RoundRectangle 50" BackgroundColor="White" HeightRequest="34" WidthRequest="34" VerticalOptions="Center">
                    <Label Text="CN" TextColor="#007AFF" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center" />
                </Border>
                <Image Source="threedots.png" VerticalOptions="Center" HeightRequest="24" WidthRequest="24"/>
            </HorizontalStackLayout>
        </Grid>
        
        <Grid Grid.Row="1" Margin="10,5" ColumnDefinitions="*, Auto" ColumnSpacing="10">
            <Border Grid.Column="0" Stroke="LightGray" StrokeThickness="1" StrokeShape="RoundRectangle 5">
                <SearchBar Placeholder="Search..." Text="{Binding SearchText}" CancelButtonColor="Transparent"/>
            </Border>
            <Grid Grid.Column="1" HorizontalOptions="End" VerticalOptions="Center">
                 <ImageButton Source="cart_icon.png" HeightRequest="30" WidthRequest="30" Command="{Binding GoToCartCommand}"/>
                 <Border StrokeShape="RoundRectangle 20" BackgroundColor="Red"
                         IsVisible="{Binding IsCartBadgeVisible}"
                         HorizontalOptions="End" VerticalOptions="Start"
                         TranslationX="5" TranslationY="-5">
                      <Label Text="{Binding CartItemCount}" TextColor="White" FontSize="10" Padding="5,2" />
                 </Border>
            </Grid>
        </Grid>

        <Grid Grid.Row="2">
            <CollectionView ItemsSource="{Binding Products}" IsVisible="{Binding IsNotBusy}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Product">
                        <Border Stroke="LightGray" StrokeThickness="1" Margin="10" Padding="10">
                             <Grid RowDefinitions="Auto, Auto" ColumnDefinitions="*, Auto" ColumnSpacing="10" RowSpacing="10">
            
                                <!-- Product Info (Top Left) -->
                                <VerticalStackLayout Grid.Row="0" Grid.Column="0" VerticalOptions="Start" Spacing="5">
                                    <HorizontalStackLayout>
                                        <Label Text="{Binding Sku}" FontSize="12" TextColor="Gray"/>
                                        <Label Text="{Binding Variations[0].StockQuantity, FallbackValue=0, StringFormat=' {0} in stock'}" TextColor="Green" FontSize="12" />
                                    </HorizontalStackLayout>
                                    <HorizontalStackLayout>
                                        <Label Text="{Binding Name}" FontAttributes="Bold" FontSize="13"/>
                                    </HorizontalStackLayout>
                                    <HorizontalStackLayout>   
                                    <Label Text="{Binding DisplayPrice, StringFormat='RM {0}'}" FontAttributes="Bold" FontSize="15" />
                                    </HorizontalStackLayout>
                                </VerticalStackLayout>
                                
                                <!-- Image (Top Right) -->
                                <ffimageloading:CachedImage 
                                    Grid.Row="0" Grid.Column="1"
                                    Source="{Binding ImageUrl}" 
                                    ErrorPlaceholder="no_image.png" 
                                    TranslationX="55"
                                    HeightRequest="80" 
                                    WidthRequest="100" 
                                    CacheDuration="30" />
                                
                                <!-- Controls are now smaller and aligned to the right -->
                                <HorizontalStackLayout Grid.Row="1" Grid.Column="1" VerticalOptions="End" HorizontalOptions="End" Spacing="5">
                                    <!-- UOM Dropdown -->
                                    <Border Stroke="LightGray" StrokeThickness="1" Padding="5,0" HeightRequest="40">
                                        <Picker ItemsSource="{Binding Variations}"
                                                SelectedItem="{Binding SelectedVariation}"
                                                ItemDisplayBinding="{Binding Uom}"
                                                WidthRequest="70"
                                                FontSize="12"
                                                VerticalOptions="Center"/>
                                    </Border>
                                    
                                    <!-- Quantity Stepper -->
                                    <Border Stroke="LightGray" StrokeThickness="1" Padding="3,0" HeightRequest="40" WidthRequest="110">
                                        <HorizontalStackLayout Spacing="3" VerticalOptions="Center">
                                            <Button Text="-" 
                                                    WidthRequest="10"
                                                    BackgroundColor="Transparent"
                                                    TextColor="Black"
                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:CatalogViewModel}}, Path=DecrementQuantityCommand}"
                                                    CommandParameter="{Binding .}"/>
                                            <Label Text="{Binding QuantityToAdd}" VerticalOptions="Center" FontSize="14" TextColor="Black"/>
                                            <Button Text="+" 
                                                    WidthRequest="10"
                                                    BackgroundColor="Transparent"
                                                    TextColor="Black"
                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:CatalogViewModel}}, Path=IncrementQuantityCommand}"
                                                    CommandParameter="{Binding .}"/>
                                        </HorizontalStackLayout>
                                    </Border>
                                    
                                    <!-- Add to Cart Button -->
                                    <Button Text="+" 
                                            WidthRequest="35"
                                            HeightRequest="35"
                                            CornerRadius="22"
                                            BackgroundColor="#007AFF"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:CatalogViewModel}}, Path=AddToCartCommand}"
                                            CommandParameter="{Binding .}"/>
                                </HorizontalStackLayout>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" HorizontalOptions="Center" VerticalOptions="Center" />
        </Grid>
    </Grid>
</ContentPage>

