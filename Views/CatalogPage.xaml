<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:BO_Mobile.ViewModels"
             xmlns:models="clr-namespace:BO_Mobile.Models"
             xmlns:ffimageloading="clr-namespace:FFImageLoading.Maui;assembly=FFImageLoading.Maui"
             x:Class="BO_Mobile.Views.CatalogPage"
             x:DataType="viewModels:CatalogViewModel"
             Title="Catalog">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Cart"
                     IconImageSource="cart_icon.png"
                     Command="{Binding GoToCartCommand}" />
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="Auto, *">
        <SearchBar Grid.Row="0"
                   Placeholder="Search..."
                   Text="{Binding SearchText}"
                   Margin="10"/>

        <Grid Grid.Row="1">
            <CollectionView ItemsSource="{Binding Products}"
                            IsVisible="{Binding IsNotBusy}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Product">
                        <Border Stroke="LightGray" StrokeThickness="1" Margin="10" Padding="10">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="5" />
                            </Border.StrokeShape>
                            <Border.Shadow>
                                <Shadow Brush="Black" Offset="5,5" Radius="10" Opacity="0.2" />
                            </Border.Shadow>
                            <Grid ColumnDefinitions="100, *, Auto" ColumnSpacing="10">
                                
                                <ffimageloading:CachedImage
                                    Grid.Column="0"
                                    Source="{Binding ImageUrl}"
                                    Aspect="AspectFill"
                                    HeightRequest="100"
                                    WidthRequest="100"
                                    LoadingPlaceholder="placeholder.png"
                                    ErrorPlaceholder="placeholder.png"
                                    CacheDuration="30" />

                                <VerticalStackLayout Grid.Column="1" VerticalOptions="Center">
                                    <Label Text="{Binding Sku}" FontSize="12" TextColor="Gray"/>
                                    <Label Text="{Binding Name}" FontAttributes="Bold" FontSize="16"/>
                                    <Label Text="{Binding DisplayPrice, StringFormat='RM {0}'}" FontSize="14" />
                                    <Label TextColor="Green" FontSize="12">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="{Binding Variations[0].StockQuantity, FallbackValue=0}" />
                                                <Span Text=" in stock" />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                </VerticalStackLayout>

                                <Button Grid.Column="2"
                                        Text="+"
                                        FontSize="Large"
                                        VerticalOptions="Center"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:CatalogViewModel}}, Path=AddToCartCommand}"
                                        CommandParameter="{Binding .}"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <ActivityIndicator IsRunning="{Binding IsBusy}"
                               IsVisible="{Binding IsBusy}"
                               HorizontalOptions="Center"
                               VerticalOptions="Center" />
        </Grid>
    </Grid>
</ContentPage>

